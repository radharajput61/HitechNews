<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Profile.UpdateProfileActivity">
    <LinearLayout

        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/tvNest"
                        android:layout_weight="7"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="@dimen/_25sdp"
                            android:id="@+id/iv_back"
                            android:layout_height="@dimen/_25sdp"
                            android:src="@drawable/ic_round_back"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_14sdp"
                            android:drawablePadding="@dimen/_6sdp"
                            android:text=" Profile Details"
                            android:background="@null"
                            android:padding="@dimen/_9sdp"
                            android:textStyle="bold"
                            android:importantForAutofill="no"
                            android:inputType="number"
                            android:ellipsize="end"
                            android:textColor="@color/black" />
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="?actionBarSize"
        android:layout_marginBottom="@dimen/_60sdp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/ll_1"

            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardUseCompatPadding="true"
                    >
                    <LinearLayout
                        android:orientation="horizontal"
                        android:background="#f8f7fc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/etName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#f8f7fc"
                            android:drawableLeft="@drawable/ic_user_p"
                            android:drawablePadding="@dimen/_6sdp"
                            android:hint="Enter Name"
                            android:textSize="@dimen/_11sdp"
                            android:inputType="text"
                            android:importantForAutofill="no"
                            android:padding="@dimen/_9sdp"
                            android:textColor="@color/black" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardUseCompatPadding="true"
                    >
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/etEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#f8f7fc"
                            android:drawableLeft="@drawable/ic_email"
                            android:drawablePadding="@dimen/_6sdp"
                            android:hint="Enter Email"
                            android:textSize="@dimen/_11sdp"
                            android:inputType="textEmailAddress"
                            android:importantForAutofill="no"
                            android:padding="@dimen/_9sdp"
                            android:textColor="@color/black" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardUseCompatPadding="true"
                    >
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Spinner
                            android:id="@+id/etGender"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#f8f7fc"
                            android:drawableLeft="@drawable/ic_user_p"
                            android:drawablePadding="@dimen/_6sdp"
                            android:hint="Gender"
                            android:importantForAutofill="no"
                            android:inputType="textPassword"
                            android:padding="@dimen/_9sdp"
                            android:textColor="@color/black" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:paddingLeft="@dimen/_10sdp"

                android:paddingRight="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/card_view_color"

                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardUseCompatPadding="true"
                    >
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/etAbout"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_60sdp"
                            android:gravity="start"
                            android:hint="About Me"
                            android:background="#f8f7fc"
                            android:textColorHint="#8E8E8E"
                            android:padding="@dimen/_5sdp"
                            android:maxLines="20"
                            android:textSize="@dimen/_11sdp"
                            android:importantForAutofill="no"
                            android:inputType="textMultiLine"
                            android:scrollbars="vertical"
                            android:textColor="@color/black" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>



    <LinearLayout
        android:id="@+id/bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:background="@color/purple_500"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="@dimen/_40sdp">
        <TextView
            android:id="@+id/tvSubmit"
            android:padding="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            android:text="Update Profile"
            android:textColor="@color/white"
            android:gravity="center"
            />
        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/skLoader"
            android:visibility="gone"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            style="@style/SpinKitView.Wave"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:SpinKit_Color="@color/white" />
    </LinearLayout>
</RelativeLayout>